@export var health_attribute: HealthAttribute

@onready var health_handler: Node = get_node(\"/root/HealthHandler\")

const speed: float = 150
var player: CharacterBody2D

func _ready():
	player = get_node(\"/root/Main\").find_child(\"Player\")

func _physics_process(delta: float):
	var velocity = global_position.direction_to(player.global_position) * speed
	global_position += velocity * delta

func _on_body_entered(body):
	health_handler.apply_damage(20)
